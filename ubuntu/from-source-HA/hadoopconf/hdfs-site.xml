<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property>
		<name>dfs.nameservices</name>
		<value>vinaycluster</value>
	</property>
	<property>
		<name>dfs.ha.namenodes.vinaycluster</name>
		<value>nn1,nn2</value>
	</property>
	<property>
		<name>dfs.ha.namenode.id</name>
		<value>${namenode-id}</value>
	</property>
	<property>
		<name>dfs.replication</name>
		<value>3</value>
	</property>
	<property>
		<name>dfs.namenode.name.dir</name>
		<value>/hadoop/name</value>
	</property>
	<property>
		<name>dfs.namenode.handler.count</name>
		<value>10</value>
	</property>
	<property>
		<name>dfs.namenode.rpc-address.vinaycluster.nn1</name>
		<value>master1:9820</value>
	</property>
	<property>
		<name>dfs.namenode.rpc-address.vinaycluster.nn2</name>
		<value>master2:9820</value>
	</property>
	<property>
		<name>dfs.namenode.http-address.vinaycluster.nn1</name>
		<value>master1:9870</value>
	</property>
	<property>
		<name>dfs.namenode.http-address.vinaycluster.nn2</name>
		<value>master2:9870</value>
	</property>
	<property>
		<name>dfs.namenode.shared.edits.dir</name>
		<value>qjournal://master1:8485;master2:8485;slave1:8485/vinaycluster</value>
	</property>
	<property>
		<name>dfs.ha.automatic-failover.enabled</name>
		<value>true</value>
	</property>
	<property>
		<name>dfs.ha.fencing.methods</name>
		<value>shell(/bin/true)</value>
	</property>
	<property>
		<name>dfs.client.failover.proxy.provider.vinaycluster</name>
		<value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
	</property>

<!--Journal node configurations -->
	<property>
		<name>dfs.journalnode.rpc-address</name>
		<value>${machine-hostname}:8485</value>
	</property>
	<property>
		<name>dfs.journalnode.http-address</name>
		<value>${machine-hostname}:8480</value>
	</property>
	<property>
		<name>dfs.journalnode.edits.dir</name>
		<value>/hadoop/journal</value>
	</property>

<!--Data node configurations -->
	<property>
		<name>dfs.datanode.rpc-address</name>
		<value>${machine-hostname}:9866</value>
	</property>
	<property>
		<name>dfs.datanode.http-address</name>
		<value>${machine-hostname}:9864</value>
	</property>
	<property>
		<name>dfs.datanode.ipc-address</name>
		<value>${machine-hostname}:9867</value>
	</property>
	<property>
		<name>dfs.datanode.data.dir</name>
		<value>/hadoop/data</value>
	</property>
</configuration>
