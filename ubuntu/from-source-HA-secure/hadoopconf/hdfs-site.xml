<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>dfs.nameservices</name>
        <value>vinaycluster</value>
    </property>
    <property>
        <name>dfs.ha.namenodes.vinaycluster</name>
        <value>nn1,nn2</value>
    </property>
    <property>
        <name>dfs.ha.namenode.id</name>
        <value>${namenode-id}</value>
    </property>
    <property>
        <name>dfs.replication</name>
        <value>3</value>
    </property>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/data/hdfs/name</value>
    </property>
    <property>
        <name>dfs.namenode.handler.count</name>
        <value>10</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.vinaycluster.nn1</name>
        <value>vinay-hadoop-master1:9820</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.vinaycluster.nn2</name>
        <value>vinay-hadoop-master2:9820</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.vinaycluster.nn1</name>
        <value>vinay-hadoop-master1:9870</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.vinaycluster.nn2</name>
        <value>vinay-hadoop-master2:9870</value>
    </property>
    <property>
        <name>dfs.namenode.https-address.vinaycluster.nn1</name>
        <value>vinay-hadoop-master1:9871</value>
    </property>
    <property>
        <name>dfs.namenode.https-address.vinaycluster.nn2</name>
        <value>vinay-hadoop-master2:9871</value>
    </property>
    <property>
        <name>dfs.namenode.shared.edits.dir</name>
        <value>qjournal://vinay-hadoop-master1:8485;vinay-hadoop-master2:8485;vinay-hadoop-slave1:8485/vinaycluster</value>
    </property>
    <property>
        <name>dfs.ha.automatic-failover.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.ha.fencing.methods</name>
        <value>shell(/bin/true)</value>
    </property>
<!-- Namenode security configurations -->
    <property>
        <name>dfs.block.access.token.enable</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.namenode.kerberos.principal</name>
        <value>nn/_HOST@HADOOP.COM</value>
    </property>
    <property>
        <name>dfs.namenode.keytab.file</name>
        <value>${user.home}/nn.${machine-hostname}.keytab</value>
    </property>
    <property>
        <name>dfs.namenode.kerberos.internal.spnego.principal</name>
        <value>HTTP/_HOST@HADOOP.COM</value>
    </property>
    <property>
        <name>dfs.web.authentication.kerberos.keytab</name>
        <value>${user.home}/HTTP.${machine-hostname}.keytab</value>
    </property>
    <property>
        <name>dfs.http.policy</name>
        <value>HTTPS_ONLY</value>
    </property>
<!--Client configurations -->
    <property>
        <name>dfs.web.authentication.kerberos.principal</name>
        <value>HTTP/_HOST@HADOOP.COM</value>
    </property>

    <property>
        <name>dfs.client.failover.proxy.provider.vinaycluster</name>
        <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
    </property>


<!--Journal node configurations -->
    <property>
        <name>dfs.journalnode.rpc-address</name>
        <value>${machine-hostname}:8485</value>
    </property>
    <property>
        <name>dfs.journalnode.http-address</name>
        <value>${machine-hostname}:8480</value>
    </property>
    <property>
        <name>dfs.journalnode.https-address</name>
        <value>${machine-hostname}:8481</value>
    </property>
    <property>
        <name>dfs.journalnode.edits.dir</name>
        <value>/data/hdfs/journal</value>
    </property>
<!--Journal node security configurations -->
    <property>
        <name>dfs.journalnode.kerberos.principal</name>
        <value>jn/_HOST@HADOOP.COM</value>
    </property>
    <property>
        <name>dfs.journalnode.keytab.file</name>
        <value>${user.home}/jn.${machine-hostname}.keytab</value>
    </property>
    <property>
        <name>dfs.journalnode.kerberos.internal.spnego.principal</name>
        <value>HTTP/_HOST@HADOOP.COM</value>
    </property>

<!--Data node configurations -->
    <property>
        <name>dfs.datanode.rpc-address</name>
        <value>${machine-hostname}:9866</value>
    </property>
    <property>
        <name>dfs.datanode.http-address</name>
        <value>${machine-hostname}:9864</value>
    </property>
    <property>
        <name>dfs.datanode.https-address</name>
        <value>${machine-hostname}:9865</value>
    </property>
    <property>
        <name>dfs.datanode.ipc-address</name>
        <value>${machine-hostname}:9867</value>
    </property>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/data/hdfs/data</value>
    </property>
<!-- Datanode security configurations -->
    <property>
        <name>dfs.datanode.kerberos.principal</name>
        <value>dn/_HOST@HADOOP.COM</value>
    </property>
    <property>
        <name>dfs.datanode.keytab.file</name>
        <value>${user.home}/dn.${machine-hostname}.keytab</value>
    </property>
    <property>
        <name>dfs.data.transfer.protection</name>
        <value>authentication</value>
    </property>
</configuration>
